datasource db {
  provider = "mongodb"
  url      = "mongodb://mongo:27017/books"
}

generator client {
  provider = "prisma-client-js"
}

model User {
    id       String     @id @default(auto()) @map("_id") @db.ObjectId
    name     String
    email    String     @unique
    password String
    posts    Post[]
}

model Post {
    id       String   @id @default(auto()) @map("_id") @db.ObjectId
    title    String
    author   User    @relation(fields: [authorId],references: [id])
    authorId String   @map("author") @db.ObjectId
}